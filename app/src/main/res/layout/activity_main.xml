<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:scrollbars="horizontal"
        android:scrollHorizontally="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:gravity="bottom"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginBottom="20px"
        android:orientation="horizontal">
        <Button
            android:id="@+id/pi_test"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/ram_test"/>
        <ImageButton
            android:id="@+id/pi_test_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_action_settings"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/prime_test"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/cpu_test"/>
        <ImageButton
            android:id="@+id/prime_test_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_action_settings"
            android:layout_gravity="center" />
    </LinearLayout>

</LinearLayout>